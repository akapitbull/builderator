build_name 'builderator-testing'

vendor :test_vendor do |vendor|
  vendor.github 'rapid7/builderator'
end

policy(:test).path vendored(:test_policies, 'Buildfile-local-overrides')

profile :default do |default|
  default.chef do |chef|
    chef.run_list ['rapid7-test::default']
  end
end

profile :bake => Config.profile(:default) do |bake|
  bake.chef.run_list ['rapid7-test::default']
end
