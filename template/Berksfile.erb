require 'builderator/patch/berkshelf'

<% cookbook.sources.each do |s| -%>
source '<%= s %>'
<% end -%>
<% if cookbook.metadata %>metadata<% end -%>

<% cookbook.depends.each do |name, cookbook| -%>
cookbook '<%= name %>', '<%= cookbook.fetch(:version, '>= 0.0.0') %>', <%= cookbook.to_hash %>
<% end -%>
